<div class="grid-sizer"></div>
<div class="grid-item">
  <a href="{% if activity.redirect %}{{ activity.redirect }}{% else %}{{ activity.url | relative_url }}{% endif %}">
    <div class="card hoverable">
      {% if activity.img %}
        {%
          include figure.liquid
          loading="eager"
          path=activity.img
          sizes = "250px"
          alt="activity thumbnail"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title text-lowercase">{{ activity.title }}</h2>
        <p class="card-text">{{ activity.description }}</p>
        <div class="row ml-1 mr-1 p-0">
          {% if activity.github %}
            <div class="github-icon">
              <div class="icon" data-toggle="tooltip" title="Code Repository">
                <a href="{{ activity.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
              </div>
              {% if activity.github_stars %}
                <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                  <i class="fa-solid fa-star"></i>
                  <span id="{{ activity.github_stars }}-stars"></span>
                </span>
              {% endif %}
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
